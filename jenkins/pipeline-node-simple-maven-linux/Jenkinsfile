def myDocker()
{
//node {
    checkout scm

    def dockerFile = 'jenkins/pipeline-env-test-2/Dockerfile'
    def imageName = "my-image:${env.BUILD_ID}"
    def dockerArgs = " --pull --rm ${pwd}"
    def imageArgs = "-f ${dockerFile} ${dockerArgs}"
    def customImage = docker.build(imageName, imageArgs)

    customImage.inside {
        //sh 'make test'
        myTask()
    }
//}   
}

